set nofoldenable
set number
set list listchars=tab:▸\ ,trail:·,precedes:←,extends:→
set cursorline
autocmd FileType yaml,yml setlocal ts=2 sts=2 sw=2 expandtab
autocmd FileType sh setlocal ts=4 sts=4 sw=4 expandtab
let g:go_fmt_command = "goimports"
let g:python3_host_prog = expand('~/.local/share/nvim/.venv/bin/python3')
let g:black_virtualenv = expand('~/.local/share/nvim/.venv')
let g:pymode_python = "python3"
let g:deoplete#enable_at_startup = 1
let g:terraform_fmt_on_save=1
call plug#begin('~/.local/share/nvim/plugged')
  Plug 'google/vim-maktaba'
  Plug 'google/vim-codefmt'
  Plug 'google/vim-glaive'
  Plug 'kaicataldo/material.vim', { 'branch': 'main' }
  Plug 'psf/black', { 'branch': 'stable' }
  Plug 'python-mode/python-mode', { 'branch': 'develop' }
  Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
  Plug 'tpope/vim-fugitive'
  Plug 'deoplete-plugins/deoplete-jedi'
  Plug 'davidhalter/jedi-vim'
  Plug 'tpope/vim-surround'
call plug#end()
colorscheme material
autocmd FileType json let b:codefmt_formatter = 'prettier'
" Setup the file explorer (netrw)
let g:netrw_banner = 0
let g:netrw_winsize = 20
let g:netrw_browse_split = 4
let g:netrw_liststyle = 3
" Toggle netrw
function! ToggleExplorer()
  Lexplore
endfunction
map <silent> <F6> :call ToggleExplorer() <CR>
"augroup ProjectDrawer
"  autocmd!
"  autocmd VimEnter * :Vexplore
"augroup END
